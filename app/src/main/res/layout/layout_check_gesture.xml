<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1826"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="@color/gesture_set_color"
        android:textSize="20sp"
        tools:text="185****4399" />

    <TextView
        android:id="@+id/tv_check_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/drag_draw_icon"
        android:textColor="@color/gesture_set_color"
        android:textSize="14sp" />

    <com.mrdo.lock.locklib.LockPatternView
        android:id="@+id/lockPatternView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_forget_gesture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/forget_pwd"
            android:textColor="@color/forget_color"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/forget_color" />

        <TextView
            android:id="@+id/tv_switch_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_pwd"
            android:textColor="@color/forget_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>